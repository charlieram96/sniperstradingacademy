{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "git": {
    "deploymentEnabled": {
      "main": true,
      "staging": true
    }
  },
  "crons": [
    {
      "path": "/api/cron/process-notifications",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/cleanup-notifications",
      "schedule": "0 2 * * 0"
    },
    {
      "path": "/api/cron/monitor-payment-intents",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/expire-intents",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/check-gas-tank",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/create-payout-batches",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/monitor-deposits",
      "schedule": "* * * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/:path*",
      "headers": [
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, stripe-signature"
        }
      ]
    }
  ]
}
